                </div>
                <div class="col-12">
                    <script src="https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js"></script>
                    <coingecko-coin-price-marquee-widget coin-ids="bitcoin,ethereum,eos,ripple,litecoin" currency="usd" background-color="#ffffff" locale="en"></coingecko-coin-price-marquee-widget>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="tab-pane" id="pdf">
                            <div class="row clearfix">
                                <div class="col-lg-6 col-md-4 col-sm-6">
                                    <div class="card">
                                        <div class="file">
                                                <div class="hover">
                                                    <button type="button" class="btn btn-icon btn-icon-mini btn-round btn-danger">
                                                        <i class="zmdi zmdi-balance-wallet"></i>
                                                    </button>
                                                </div>
                                                <div class="icon">
                                                    <button type="button" class="btn btn-round btn-danger">
                                                        <i class="zmdi zmdi-balance-wallet"></i>
                                                    </button>
                                                </div>
                                                <div class="icon">
                                                    <img style="height:60%; width:60%;" src="/private/assets/images/payment-method/coincloud.png" alt="" srcset="">
                                                </div>
                                                <div class="file-name">
                                                    <form>
                                                        <div class="row">
                                                            <div class="col-lg-12 col-sm-12">
                                                                <small class="text-muted"><b>Our Bitcoin Wallet Address:</b> <br>(Please note that you can only send BTC to us on this address) </small>
                                                                <input type="hidden" value="johndoe" name="username">
                                                                <input type="hidden" value="godwinide@gmail.com" name="email">
                                                                <input style="text-align:center; font-weight:bold;" class="form-control" 
                                                                                                                                            value="bc1qawsjvzkufcp92x2hcz7afnehdvrvu2lp4fhtqw" type="text" readonly name="amount" id="password">
                                                                                                                                        </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-lg-12 col-sm-12">
                                                                <small class="text-muted"><b>Current Wallet Plan:</b> </small>
                                                                <input style="text-align:center; font-size:15px;" value="Basic" class="form-control" readonly placeholder="New Password">
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="card">
                                                            <div style="margin:auto; text-align:center;" class="col-lg-6 col-sm-10">
                                                                <br>
                                                                <p><strong>Copy the above address to send BTC</strong></p>
                                                               
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-4 col-sm-12">
                                    <div class="card">
                                        <div class="file">
                                            <div class="icon">
                                                <button type="button" class="btn btn-round btn-danger">
                                                    <i class="zmdi zmdi-balance-wallet"></i>
                                                </button>
                                            </div>
                                            <h2 class="card-header text-center">Proof of Payment Verification</h2>
                                            <div class="file-name">
                                                <form method="post" enctype="multipart/form-data">
                                                    <%-include("./partials/messages") %>
                                                    <div class="row">
                                                        <div class="col-lg-12 col-sm-12">
                                                            <small class="text-muted"><b>Amount:</b> <br>(Please specify here, the amount you deposited) </small>
                                                            <input type="hidden" value="johndoe" name="username">
                                                            <input type="hidden" value="godwinide@gmail.com" name="email">
                                                            <input type="hidden" value="Basic" name="plan">
                                                            <input style="text-align:center; font-weight:bold;" class="form-control" placeholder="How much did you deposit?" value="" type="number" name="amount">
                                                           
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="row">
                                                        <div class="col-lg-12 col-sm-12">
                                                            <small class="text-muted"><b>Proof of Payment:</b> </small>
                                                            <input style="text-align:center; font-size:15px;" type="file" name="image" class="form-control"  placeholder="New Password">
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="card">
                                                        <div style="margin:auto; text-align:center;" class="col-lg-6 col-sm-10">
                                                            <small class="text-muted"> <b>~~~</b></small>
                                                            <ul class="social-links list-unstyled">
                                                                <button type="submit" style="border-radius:10px; background-color:#00A9E3;" class="btn">Submit Payment Proof</button>
                                                            </ul>
                                                            <br>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>